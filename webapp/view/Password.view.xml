<mvc:View
    controllerName="pro_login.controller.Password"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">
<Page title="Change Password" showNavButton="true" navButtonPress=".onBack">
    <VBox
        alignItems="Center"
        justifyContent="Center"
        width="100%"
        height="100%">
    <VBox
        alignItems="Center"
        justifyContent="Center"
        height="90%"
        width="50%"
        class="sapUiLargeMargin">
         <HBox alignItems="Center">
                <Image src="img/inflexion_logo.png" width="60%" height="30%"/>
                <Title text="Inflexion" class="title"/>
            </HBox>
            <HBox alignItems="Center" class="sapUiLargeMarginTop">
                <Label text="Email_Id " design="Bold" width="200px" textAlign="End"/>
                <Input value="{global>/email}" editable="false" class="sapUiMediumMarginBegin" width="250px"/>
            </HBox>
            <HBox alignItems="Center" class="sapUiSmallMarginTop">
                <Label text="Enter the Password" design="Bold" width="200px" textAlign="End" required="true"/>
                <Input value="{forgot>/password}" placeholder="Enter Password" class="sapUiMediumMarginBegin" width="250px"/>
            </HBox>
            <HBox alignItems="Center" class="sapUiSmallMarginTop">
                <Label text="Enter the Confirm Password" design="Bold" width="200px" textAlign="End" required="true"/>
                <Input value="{forgot>/confirmPassword}" placeholder="Enter Confirm Password" class="sapUiMediumMarginBegin" width="250px"/>
            </HBox>
            <HBox width="80%" justifyContent="End" class="sapUiMediumMarginTop sapUiLargeMarginEnd">
                <Button text="Submit" press=".onSubmit" design="Bold" width="100px" type="Emphasized"/>  
            </HBox>
    </VBox>
    </VBox>
</Page>
</mvc:View>