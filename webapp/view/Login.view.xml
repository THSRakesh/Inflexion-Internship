<mvc:View
    controllerName="pro_login.controller.Login"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <App id="Login">
        <pages>
            <Page title="Inflexion">
                <VBox
                    width="100%"
                    height="100%"
                    alignItems="Center"
                    justifyContent="Center">
                <VBox
                    alignItems="Center"
                    justifyContent="Center"
                    width="40%"
                    height="80%"
                    class="sapUiLargeMargin">

                    <HBox alignItems="Center">
                        <Image src="img/inflexion_logo.png" width="60%" height="30%"/>
                        <Title text="Inflexion" class="title"/>
                    </HBox>
                    <Text text="Login" class="loginTitle sapUiMediumMarginBottom sapUiMediumMarginTop" />
                    <VBox>
                        <Label text="Email" design="Bold" width="100%" textAlign="Begin"/>
                        <Input value="{login>/email}" placeholder="Enter Email-Id" width="100%"/>
                        <Label text="Password" design="Bold" width="100%" textAlign="Begin"/>
                        <Input value="{login>/password}" placeholder="Enter Password" width="100%" type="Password"/>
                    
                        <Button text="Login" press=".onLogin" width="100%" type="Emphasized"/>
                        <Link text="Forgot Password" press=".onForgot" class="sapUiSmallMarginTop sapUiLargeMarginBegin sapUiSmallMarginBottom"/>
                   </VBox>
                    <HBox alignItems="Center">
                        <Text text="Dont have an account?" class="sapUiSmallMarginBegin"/>
                        <Link text="Register" press=".onRegister" class="sapUiSmallMarginBegin"/>
                    </HBox>
                </VBox>
                </VBox>
            </Page>
        </pages>
    </App>
</mvc:View>