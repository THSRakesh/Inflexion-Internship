<mvc:View
    controllerName="pro_login.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <Page title="Home">
        <headerContent>
            <Button text="Logout" press=".onLogout"/>
        </headerContent>
        <VBox
            alignItems="Center"
            width="100%"
            class="loginColor">
            <HBox alignItems="Center">
                <Image src="img/inflexion_logo.png" width="60%" height="30%"/>
                <Title text="Inflexion" class="title"/>
            </HBox>
        </VBox>

        <HBox class="sapUiSmallMargin" justifyContent="Start">
            <GenericTile header="Employee" subheader="Manage Employee" press=".onUsers">
                <TileContent>
                    <core:Icon src="sap-icon://group"/>
                </TileContent>
            </GenericTile>
        </HBox>
    </Page>
</mvc:View>