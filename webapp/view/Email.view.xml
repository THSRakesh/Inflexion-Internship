<mvc:View
    controllerName="pro_login.controller.Email"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">
<Page title="Forgot Password" class="myBackground" showNavButton="true" navButtonPress=".onBack">
     <VBox
            alignItems="Center"
            justifyContent="Center"
            width="100%"
            height="100%">
        <VBox
            alignItems="Center"
            justifyContent="Center"
            width="60%"
            height="70%"
            class="sapUiLargeMargin loginColor">

            <HBox alignItems="Center">
                <Image src="img/inflexion_logo.png" width="60%" height="30%"/>
                <Title text="Inflexion" class="title"/>
            </HBox>
            <HBox alignItems="Center" class="sapUiLargeMarginTop">
                <Label text="Enter the registered Email" design="Bold" width="200px" textAlign="End" required="true"/>
                <Input value="{forgot>/email}" placeholder="Enter Email-Id" class="sapUiMediumMarginBegin" width="250px"/>
            </HBox>
            <HBox alignItems="Center" class="sapUiSmallMarginTop">
                <Label text="Enter the First Name" design="Bold" width="200px" textAlign="End" required="true"/>
                <Input value="{forgot>/firstName}" placeholder="Enter First Name" class="sapUiMediumMarginBegin" width="250px"/>
            </HBox>
            <HBox width="80%" justifyContent="End" class="sapUiMediumMarginTop sapUiLargeMarginEnd">
                <Button text="Submit" press=".onSubmit" design="Bold" width="100px" type="Emphasized"/>  
            </HBox>
    </VBox>
    </VBox>
</Page>
</mvc:View>