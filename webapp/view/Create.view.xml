<mvc:View
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout.form"
    controllerName="pro_login.controller.Create">
    <Page title="{ui>/pageTitle}" showNavButton="{= ${ui>/isCreate} || ${ui>/visible}}" navButtonPress=".onBack">
        <VBox
            alignItems="Center"
            width="100%">
            <HBox alignItems="Center">
                <Image src="img/inflexion_logo.png" width="60%" height="30%"/>
                <Title text="Inflexion" class="title"/>
            </HBox>
        </VBox>
        <l:SimpleForm
            editable="true"
            layout="ResponsiveGridLayout">
            <Toolbar >
                <Title text="{ui>/pageTitle}"/>
                <ToolbarSpacer/>
                <Button
                    text="Edit"
                    type="Emphasized"
                    press=".onEdit"
                    visible="{ui>/visible}"/>
            </Toolbar>
            
            <VBox class="sapUiSmallMarginTop" >
                <HBox class="sapUiMediumMarginBottom" justifyContent="Start">        
                    <HBox alignItems="Center">
                        <Label text="Employee Name" required="true" class="labelSize sapUiSmallMarginEnd"/>
                        <Input value="{oCreate>/name}" placeholder="Employee Name" width="250px" class="sapUiLargeMarginEnd" editable="{ui>/editable}"/>
                    </HBox>
                    <HBox alignItems="Center">
                        <Label text="Employee Email" required="true" class="labelSize sapUiSmallMarginEnd"/>
                        <Input value="{oCreate>/email}" placeholder="Employee Email" width="250px" class="sapUiLargeMarginEnd" editable="{ui>/isCreate}"/>
                    </HBox>
                    <VBox>
                        <Label text="Gender" required="true" class="labelSize sapUiLargeMarginBegin"/>
                        <HBox>
                            <RadioButtonGroup columns="2" selectedIndex="{oCreate>/gender}" editable="{ui>/editable}">
                                <RadioButton text="Male" class="sapUiSmallMarginEnd"/>
                                <RadioButton text="Female"/>
                            </RadioButtonGroup>
                        </HBox>
                    </VBox>
                </HBox>
                <HBox class="sapUiMediumMarginBottom" justifyContent="Start">
                    <HBox alignItems="Center">
                        <Label text="Department" required="true" class="labelSize sapUiSmallMarginEnd"/>
                        <ComboBox selectedKey="{oCreate>/department}" placeholder="select Department" width="250px" class="sapUiLargeMarginEnd"
                            items="{oDep>/departments}" change="onDepChange" showClearIcon="true" editable="{ui>/editable}">
                            <core:Item key="{oDep>key}" text="{oDep>text}"/>
                        </ComboBox>
                    </HBox>
                    <HBox alignItems="Center">
                        <Label text="Salary" required="true" class="labelSize sapUiSmallMarginEnd"/>
                        <Input value="{oCreate>/salary}" placeholder="Enter Salary" width="250px" class="sapUiLargeMarginEnd" change=".onSalaryChange" editable="{ui>/editable}"/>
                    </HBox>
                    <HBox alignItems="Center">
                        <Label text="Reporting to" class="labelSize sapUiSmallMarginEnd"/>
                        <Input value="{oCreate>/reportingto_text}" editable="false" width="250px" class="sapUiLargeMarginEnd"/>
                    </HBox>
                </HBox>
            </VBox>
        </l:SimpleForm>
       
        <Table id="projectDetails"
               items="{oCreate>/projects}"
               mode="{= ${ui>/editable}? 'MultiSelect' : 'None'}">
            <headerToolbar>
                <Toolbar>
                    <Title text="Project Details"/>
                </Toolbar>
            </headerToolbar>
            <infoToolbar>
                <Toolbar>
                    <ToolbarSpacer/>
                    <Button text="Add" press=".onAddRow" type="Emphasized" visible="{ui>/editable}"/>
                    <Button text="Remove" press=".onDelRow" type="Emphasized" class="sapUiSmallMarginBegin" visible="{ui>/editable}"/>
                </Toolbar>
            </infoToolbar>
            <columns>
                <Column>
                    <Text text="Project Name"/>
                </Column>
                <Column>
                    <Text text="Project Description"/>
                </Column>
                <Column>
                    <Text text="Project type"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ComboBox items="{oPro>/projects}" selectedKey="{oCreate>projectId}" width="300px" change=".onProChange" showClearIcon="true" editable="{ui>/editable}">
                            <core:Item key="{oPro>key}" text="{oPro>text}"/>
                        </ComboBox>
                        <Text text="{oCreate>projectDesc}" wrapping="true"/>
                        <Text text="{oCreate>projectType}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <HBox justifyContent="Center">
            <Button text="{= ${ui>/isCreate}? 'Save' : 'Update'}" 
                    press=".onSave" type="Emphasized" class="sapUiSmallMarginEnd" visible="{ui>/editable}"/>
            <Button text="Cancel" press=".onCancel" visible="{ui>/editable}"/>
        </HBox>
    </Page>
</mvc:View>